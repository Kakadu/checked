	rm -f doc/*
	$(OCAMLDOC) $(MODULE_INCLUDES) $(P4FLAGS) -d doc -html *.mli *.ml

wiki: $(CMO)
	mkdir -p wiki
	rm -f wiki/*
	$(OCAMLDOC) $(MODULE_INCLUDES) $(P4FLAGS) -d wiki -g odoc_wiki.cmo *.mli *.ml

wc:
	ocamlwc -p *.mli *.ml

# default clean
clean-am:
	rm -fR $(CMA) $(CMXA) $(CMO) $(CMI) $(CLEAN_CMI) $(CMX) $(OBJ) $(LIB) META $(CLEAN_EXTRA)

